{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-c++",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "g++"
            },
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "problemMatcher": "$gcc"
        }
    ]
}